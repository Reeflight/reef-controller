{
  "name": "reef-controller",
  "version": "0.1.1",
  "description": "controlling the light",
  "main": "dist/reef-controller.js",
  "scripts": {
    "start": "node dist/reef-controller.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reeflight/reef-controller"
  },
  "keywords": [
    "reeflight",
    "controller",
    "reef-controller",
    "reeflight-controller"
  ],
  "author": "Andrew Vanardennen",
  "license": "CC-BY-NC-ND-4.0",
  "bugs": {
    "url": "https://github.com/reeflight/reef-controller/issues"
  },
  "dependencies": {
    "backed-logger": "^1.0.1",
    "i2c": "^0.2.3"
  },
  "devDependencies": {
    "firebase": "^3.6.9"
  },
  "backed": {
    "bundles": [
      {
        "src": "src/index.js",
        "dest": "dist/reef-controller.js",
        "format": "cjs",
        "babel": {
          "presets": [
            "es2016"
          ],
          "plugins": [
            "external-helpers"
          ]
        }
      }
    ],
    "sources": [{
      "src": "src/workers/*.js",
      "dest": "dist"
    }],
    "server": {
      "use": [],
      "demo": "dist"
    }
  }
}
